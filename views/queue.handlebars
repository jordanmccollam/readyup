{{!-- USER SECTION --}}
<div class="container">
    <div class="row">
        <div class="col-12 text-center">
            <button class="btn btn-dark btn-block" id="editProfile">
                <h1 class="customFont currentUserId profileBar {{currentUser.console}} {{currentUser.room}}-{{currentUser.rl_rank}} {{currentUser.room}}-{{currentUser.cod_rank}} {{currentUser.room}}-{{currentUser.fortnite_rank}}"
                    data-id="{{currentUser.id}}">
                    <div class="container">
                        <div class="row">
                            <div class="col-4 consoleDisplay"></div>
                            <div class="col-4" id="profileName">{{currentUser.username}}</div>
                            <div class="col-4 iconDisplay"></div>
                        </div>
                    </div>
                </h1>
            </button>
            <p class="text-secondary mt-1">Tap the Profile Bar to edit your profile. Tap the X to leave all queues. <button class="btn btn-danger btn-sm customFont" id="leaveQueues">X</button></p>
        </div>
    </div>
</div>

{{!-- GAME LANES --}}
<div class="container-fluid px-5">
    <div class="row my-5 d-flex justify-content-around">
        <div class="col-lg-4 rounded rlHeader text-center">
            <img src="images/rl_banner.png" width="300">
            <br>
            <button class="btn btn-outline-light customFont mb-3" id="enterRl">ENTER</button>
            <div id="rlSection" class="lane rocketLeague pt-3 bg-light mb-2">
                {{#each rlPlayers}}
                <button id="{{id}}" match="{{match}}"
                    class="btn btn-dark player fill border border-success
                            {{console}} {{room}}-{{rl_rank}} {{room}}-{{cod_rank}} {{room}}-{{fortnite_rank}} {{room}}">
                    <span class="consoleDisplay"></span>
                    <span class="px-4">{{username}}</span>
                    <span class="iconDisplay"></span>
                </button>
                <br>
                {{/each}}
            </div>
        </div>
        <div class="col-lg-4 rounded codHeader text-center">
            <img src="images/MW.png" width="200" class="py-2">
            <br>
            <button class="btn btn-outline-light customFont mb-3" id="enterCod">ENTER</button>
            <div id="codSection" class="lane cod pt-3 bg-light mb-2">
                {{#each codPlayers}}
                <button id="{{id}}" match="{{match}}"
                    class="btn btn-dark player fill border border-success
                            {{console}} {{room}}-{{rl_rank}} {{room}}-{{cod_rank}} {{room}}-{{fortnite_rank}} {{room}}">
                    <span class="consoleDisplay"></span>
                    <span class="px-4">{{username}}</span>
                    <span class="iconDisplay"></span>
                </button>
                <br>
                {{/each}}
            </div>
        </div>
        <div class="col-lg-4 rounded fortniteHeader text-center">
            <img src="images/fortnite_banner.png" width="250" class="py-4">
            <br>
            <button class="btn btn-outline-light customFont mb-3" id="enterFortnite">ENTER</button>
            <div id="fortniteSection" class="lane fortnite pt-3 bg-light mb-2">
                {{#each fortnitePlayers}}
                <button id="{{id}}" match="{{match}}" class="btn btn-dark player fill border border-success
                            {{console}} {{room}}-{{fortnite_rank}} {{room}}">
                    <span class="consoleDisplay"></span>
                    <span class="px-4">{{username}}</span>
                    <span class="iconDisplay"></span>
                </button>
                <br>
                {{/each}}
            </div>
        </div>
    </div>

</div>


{{!-- MODALS --}}
<div class="modal" tabindex="-1" role="dialog" id="editModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Profile</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{!-- <form class="px-4 py-3" method="POST" action="/editProfile"> --}}
                <form class="px-4 py-3">
                    <div class="form-group">
                        <label for="username">Gamer Tag</label>
                        <input type="text" class="form-control" name="username" placeholder="Unchanged"
                            id="editUsername">
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <label for="console">Console</label>
                            <select class="form-control" name="console" id="editConsole">
                                <option value="{{currentUser.console}}">Unchanged</option>
                                <option value="ps4">PS4</option>
                                <option value="xbox">XBOX</option>
                                <option value="pc">PC</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <label for="rl_rank">Rocket League Rank</label>
                            <select class="form-control" id="rl_rank" name="rl_rank" id="rl_rank">
                                <option value="{{currentUser.rl_rank}}">Unchanged</option>
                                <option value="bronze1">Bronze 1</option>
                                <option value="bronze2">Bronze 2</option>
                                <option value="bronze3">Bronze 3</option>
                                <option value="silver1">Silver 1</option>
                                <option value="silver2">Silver 2</option>
                                <option value="silver3">Silver 3</option>
                                <option value="gold1">Gold 1</option>
                                <option value="gold2">Gold 2</option>
                                <option value="gold3">Gold 3</option>
                                <option value="plat1">Plat 1</option>
                                <option value="plat2">Plat 2</option>
                                <option value="plat3">Plat 3</option>
                                <option value="d1">Daimond 1</option>
                                <option value="d2">Daimond 2</option>
                                <option value="d3">Daimond 3</option>
                                <option value="champ1">Champ 1</option>
                                <option value="champ2">Champ 2</option>
                                <option value="champ3">Champ 3</option>
                                <option value="grand">Grand Champ</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <label for="cod_rank">Call of Duty Skill Level</label>
                            <select class="form-control" id="cod_rank" name="cod_rank">
                                <option value="{{currentUser.cod_rank}}">Unchanged</option>
                                <option value="novice">Novice</option>
                                <option value="recruit">Recruit</option>
                                <option value="hardened">Hardened</option>
                                <option value="veteran">Veteran</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group">
                            <label for="fortnite_rank">Fortnite League</label>
                            <select class="form-control" id="fortnite_rank" name="fortnite_rank">
                                <option value="{{currentUser.fortnite_rank}}">Unchanged</option>
                                <option value="open1">Open 1</option>
                                <option value="open2">Open 2</option>
                                <option value="open3">Open 3</option>
                                <option value="contender1">Contender 1</option>
                                <option value="contender2">Contender 2</option>
                                <option value="contender3">Contender 3</option>
                                <option value="champ">Champion</option>
                            </select>
                        </div>
                    </div>
                    <p class="text-secondary text-center">(On submit you will be taken out of all queues)</p>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-outline-success rounded-circle" id="editSubmit">
                    <i class="fas fa-check"></i>
                </button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal" tabindex="-1" role="dialog" id="matchModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Match!</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-center">
                <p><span id="matchNotification" class="text-success customFont"></span> is your skill level.</p>
                <p>Find each other in game and party up!</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>